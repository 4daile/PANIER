{
	"name": "PANIER",
	"description": "PANIER est un outil pour cueillir le web. Ramassez des fragments de textes et d’images pour les déposer dans votre panier. ",
	"version": "0.7",
	"permissions": ["contextMenus", "scripting", "activeTab"],
	"background": {
		"service_worker": "index.js"
	},
	"manifest_version": 3,
	"action": {
		"default_title": "PANIER",
        "default_popup": "defaultPopup/index.html"
	},
	"icons": {
    		"16": "SRC/img/icon_16.png",
    		"32": "SRC/img/icon_32.png",
    		"48": "SRC/img/icon_48.png",
    		"128": "SRC/img/icon_128.png"
  		}
}
